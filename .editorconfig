# EditorConfig: Unifies coding style across editors/IDEs (editorconfig.org)
# Works with CodeSandbox, Replit, SpckEditor, and beyond
root = true

[*]
end_of_line = lf          # Unix-style line endings (works everywhere)
charset = utf-8           # Universal encoding
insert_final_newline = true  # Clean file ends
trim_trailing_whitespace = true  # No sloppy spaces
indent_style = space      # Spaces over tabs (mobile-friendly)
indent_size = 4           # 4 spaces = readable on small screens

[*.{js,ts}]
indent_size = 2           # 2 spaces for JS/TS (tight, modern)
max_line_length = 80      # Fits iPhone 6s screen (~80 chars wide)

[{package.json,*.json}]
indent_size = 2           # JSON standard, matches npm
